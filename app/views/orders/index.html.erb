<h3>Your Orders</h3>
<div>
  <div class="card", style="width: 100%; padding: 2%;">
    <% @orderitems.each do |orderitems| %>
      Ordered On: <%= orderitems.order.date.strftime("%d/%m/%Y")%>
        <div class="card", style="width: 100%;height:20%">
          <div class="row">
            <div class="col">
              <%= image_tag orderitems.product.image, style: "width: 40%"%><br>
            </div> 
            <div class="col">
              <div class="card-body"> 
                <%=link_to orderitems.product.name, orderitems.product%><br>
                <%=orderitems.product.description%><br> 
                Ordered Quantities:<%=orderitems.quantity%><br>
                Total: <%= orderitems.total_price %>
              </div>
            </div>
          </div>
        </div>  
      <% end %>        
    </div>
</div>
