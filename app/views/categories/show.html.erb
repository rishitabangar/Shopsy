<h3><%=@category.name%></h3>
<div class="container text-center">
  <div class="row">
    <% @products.each do |product|%>
      <div class="col-3", style="width: 18%">
        <div class="card shadow-lg bg-body-tertiary rounded">
          <%= link_to product do %>
            <%= image_tag product.image, class: "card-image-top", style: "width: 100%; height: 100px" %>
          <% end %>
          <div class="card-body" style="text-align: left;">
            <h5><%= product.name%></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div><br>
<%= link_to "Add Product", new_product_path(@product), class: "btn btn-primary" %>